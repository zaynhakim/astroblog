---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <main
    class="prose mx-auto my-8 max-w-3xl px-4 py-3 dark:prose-invert md:prose-xl prose-a:no-underline hover:prose-a:underline"
  >
    <h2>{frontmatter.title}</h2>
    <div class="not-prose flex items-baseline justify-between text-sm">
      {new Date(frontmatter.pubDate).toLocaleDateString()}
    </div>
    <div>
      <slot />
    </div>
  </main>
</BaseLayout>
